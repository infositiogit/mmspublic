<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	  xmlns:tools="http://schemas.android.com/tools"
      package="<%=configProject.getString("mms.package") %>"
      android:versionCode="<%=configProject.getString("mms.versioncode") %>"
      android:versionName="<%=configProject.getString("mms.versionname") %>">
    <uses-sdk android:minSdkVersion="19"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
 	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
 	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>
 	<uses-permission android:name="android.permission.GET_ACCOUNTS"/>
	<uses-permission android:name="android.permission.USE_CREDENTIALS"/>
	<uses-permission android:name="android.permission.BLUETOOTH" />
    <application android:hardwareAccelerated="true"
    			 android:name="mms.app.MMSApp" 
    			 <%= (appIconExist ? "android:icon=\"@mipmap/ic_launcher\"": "") %>
    			 <%= "android:label=\"" + (configProject.containsKey("mms.android.apkname") ? configProject.getString("mms.android.apkname"):"@string/app_name") + "\"" %>>
        <activity android:name="<%=configProject.getString("mms.name") %>Activity"
        		  android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
                  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> 
        <activity android:name="com.google.android.gms.auth.api.signin.internal.SignInHubActivity"
		  android:screenOrientation="portrait"
		  android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <% String usezxing = configProject.getString("mms.usezxing");
		   if(usezxing != null && usezxing.equals("1")) { %>
           	<activity
			android:name="com.journeyapps.barcodescanner.CaptureActivity"
			android:screenOrientation="fullSensor"
			tools:replace="screenOrientation" />
        <% } %>
        <% String usefacebooklogin = configProject.getString("mms.usefacebooklogin");
		   if(usefacebooklogin != null && usefacebooklogin.equals("1")) { %>
			<activity android:name="com.facebook.FacebookActivity"
	 			android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
	 			android:label="@string/app_name" />
		
			<meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
		<% } %>
    </application>
</manifest> 
